<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/Background" >

   <Button
       android:id="@+id/sheepDiseasesView"
       android:layout_width="170dp"
       android:layout_height="110dp"
       android:layout_alignBaseline="@+id/cowDiseasesView"
       android:layout_alignBottom="@+id/cowDiseasesView"
       android:layout_marginLeft="5dp"
       android:layout_toRightOf="@+id/cowDiseasesView"
       android:background="@drawable/reproduction" 
       android:onClick="reproduction"/>

    <Button
        android:id="@+id/calfDiseasesView"
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/cowDiseasesView"
        android:layout_below="@+id/cowDiseasesView"
        android:layout_marginTop="7dp"
        android:background="@drawable/contact" 
        android:onClick="contact"/>

    <Button
        android:id="@+id/cowDiseasesView"
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="111dp"
        android:background="@drawable/search" 
        android:onClick="searchDiseases"  />

    <Button
        android:id="@+id/lambDiseasesView"
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:layout_alignBaseline="@+id/calfDiseasesView"
        android:layout_alignBottom="@+id/calfDiseasesView"
        android:layout_alignLeft="@+id/sheepDiseasesView"
        android:background="@drawable/about"
        android:onClick="diagnose" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:src="@drawable/agdiagnose_logo" />

</RelativeLayout>
